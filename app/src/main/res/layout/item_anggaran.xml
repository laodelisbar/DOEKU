<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D3D3D3">

            <TextView
                android:id="@+id/kategori_anggaran_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Kategori"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nominal_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. "
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_below="@id/kategori_anggaran_txt"
                android:layout_alignStart="@id/kategori_anggaran_txt"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/nominal_anggaran_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_toEndOf="@id/nominal_prefix"
                android:layout_below="@id/kategori_anggaran_txt"
                android:layout_marginTop="4dp"/>

            <ProgressBar
                android:id="@+id/progressBarAnggaran"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/nominal_anggaran_txt"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:progressTint="@color/black" />

            <TextView
                android:id="@+id/persentasi_progres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBarAnggaran"
                android:layout_alignStart="@id/progressBarAnggaran"
                android:layout_alignEnd="@id/progressBarAnggaran"
                android:layout_marginStart="0dp"
                android:layout_marginTop="-2dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="2dp"
                android:gravity="center_horizontal"
                android:text="0%"
                android:textColor="@color/black"/>


            <ImageButton
                android:id="@+id/updateDelete_anggaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="2dp"
                android:contentDescription="Hapus"
                app:srcCompat="@drawable/titik3"
                android:backgroundTint="#D3D3D3"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
